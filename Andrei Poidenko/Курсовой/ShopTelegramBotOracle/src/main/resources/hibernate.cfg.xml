<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="hibernate.connection.username">system</property>
        <property name="hibernate.connection.password">111</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.default_schema">SHOP</property>
        <property name="show_sql">true</property>
        <mapping class="com.mycompany.shoptelegrambotoracle.Customers"/>
        <mapping class="com.mycompany.shoptelegrambotoracle.Newusers"/>
        <mapping class="com.mycompany.shoptelegrambotoracle.TypesProduct"/>
        <mapping class="com.mycompany.shoptelegrambotoracle.Products"/>
        <mapping class="com.mycompany.shoptelegrambotoracle.Manufacturers"/>
        <mapping class="com.mycompany.shoptelegrambotoracle.Orders"/>
        <mapping class="com.mycompany.shoptelegrambotoracle.OrderDetails"/>
        <mapping class="com.mycompany.shoptelegrambotoracle.Pictures"/>
   
    </session-factory>
</hibernate-configuration>
